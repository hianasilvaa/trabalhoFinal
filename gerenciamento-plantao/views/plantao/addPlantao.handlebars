ection class="container">
   <h1 class= "text-center">Cadastro de plantão</h1>
    <form action="/funcionario/store" method="post"> 
        {{!--Campo 1: Nome --}}
        <section class="mb-2">
            <label for= "nome">nome</label>
            <input type="text" name="nome" id="nome" class="form-control">

        </section>

        {{!--CAMPO2: SALÁRIO E CARGO--}}
        <section class ="row mb-2">
            <div class="col-md-6">
                <label for="data">data</label>
                <input type="text" name="data" id="data" class="form-control">
            </div>

            <div class="col-md-6">
                <label for="especialidade">especialidade</label>
                <input type="text" name="especialidade" id="especialidade" class="form-control">
            </div>
        </section> 
        {{!--CAMPO 3 - SELECIONAR CÓDIGO DO DEPARTAMENTO--}}
        <section class="mb-2">
            <label for="departamento">Escolha o horario</label>
            <select name="departamento" id="departamento" class="form-select">
                <option value=""Escolha uma opção...</option>
                <option value="1">Horario inicio</option>
                <option value="2">Horario fim</option>
            </select>
        </section>

        {{!--CAMPO 4: BOTÃO DE CADASTRAR --}}
        <section class="mb-2 d-flex justify-content-end">
            <button class="btn btn-primary" type="submit">Registrar</button>
        </section>
    </form>
</section>